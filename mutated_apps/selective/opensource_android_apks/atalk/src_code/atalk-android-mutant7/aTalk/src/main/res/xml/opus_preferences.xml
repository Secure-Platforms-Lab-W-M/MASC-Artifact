<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <org.atalk.android.gui.settings.widget.ConfigListPreference
        android:entries="@array/pref_opus_bandwidth"
        android:entryValues="@array/pref_opus_bandwidth_values"
        android:key="@string/pref_key_opus_audio_bandwidth"
        android:title="@string/service_gui_settings_OPUS_AUDIO_BANDWIDTH" />
    <org.atalk.android.gui.settings.widget.ConfigEditText
        android:inputType="number"
        android:dialogMessage="\n"
        android:key="@string/pref_key_opus_bitrate"
        android:title="@string/service_gui_settings_OPUS_BITRATE" />
    <org.atalk.android.gui.settings.widget.ConfigCheckBox
        android:key="@string/pref_key_opus_use_dtx"
        android:title="@string/service_gui_settings_OPUS_USE_DTX" />
    <org.atalk.android.gui.settings.widget.ConfigCheckBox
        android:key="@string/pref_key_opus_use_fec"
        android:title="@string/service_gui_settings_OPUS_USE_FEC" />
    <org.atalk.android.gui.settings.widget.ConfigEditText
        android:inputType="number"
        android:dialogMessage="\n"
        android:key="@string/pref_key_opus_min_expected_packet_loss"
        android:title="@string/service_gui_settings_OPUS_MIN_EXPECTED_PACKET_LOSS"
        custom:intMax="100"
        custom:intMin="1" />
    <org.atalk.android.gui.settings.widget.ConfigListPreference
        android:entries="@array/pref_opus_complexity"
        android:entryValues="@array/pref_opus_complexity"
        android:key="@string/pref_key_opus_complexity"
        android:title="@string/service_gui_settings_OPUS_COMPLEXITY" />
</PreferenceScreen>