<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textAlert"
        android:textAppearance="@style/MediumFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/service_gui_CHATROOM_DESTROY_PROMPT"
        android:paddingBottom="20dp" />

    <TextView
        android:id="@+id/textHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/service_gui_CHATROOM_DESTROY_NOTE"
        android:textAppearance="@style/MediumFont"/>

        <TextView
            android:id="@+id/reasonView"
            style="@style/MediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/service_gui_REASON_LABEL" />

        <EditText
            android:id="@+id/ReasonDestroy"
            style="@style/EntryTextView"
            android:layout_width="match_parent"
            android:text="@string/service_gui_CHATROOM_DESTROY_REASON" />

        <TextView
            android:id="@+id/venueView"
            style="@style/MediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/service_gui_CHATROOM_ALTERNATE_VENUE" />

        <EditText
            android:id="@+id/VenueAlternate"
            style="@style/EntryTextView"
            android:hint="@string/chatroom_hint"
            android:layout_width="match_parent" />

</LinearLayout>