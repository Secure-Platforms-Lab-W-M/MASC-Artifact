<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/orange500"
                android:endColor="@color/orangeA400"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey200" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
    
    <item
        android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/orangeA700"
                android:endColor="@color/orange500"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey200" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <item
        android:state_activated="true">
        <shape>
            <gradient
                android:startColor="@color/blue"
                android:endColor="@color/blue100"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey200" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/grey200"
                android:endColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey200" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>
