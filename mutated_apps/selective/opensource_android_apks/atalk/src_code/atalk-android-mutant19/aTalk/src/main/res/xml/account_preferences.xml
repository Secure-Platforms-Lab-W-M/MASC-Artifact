<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="aTalk Preferences" />

    <PreferenceScreen
        android:key="general_settings"
        android:title="General"
        android:summary="Configure general preferences">

        <intent
            android:action="org.atalk.android.gui.account.AccountPreferencesActivity.ACCOUNT_SETUP"
            android:targetPackage="org.atalk"
            android:targetClass="org.atalk.android.gui.account.AccountPreferencesActivity" />
    </PreferenceScreen>

    <PreferenceScreen
        android:key="chat_settings"
        android:title="Chat"
        android:summary="Configure chat preferences">

        <intent
            android:action="org.atalk.android.gui.account.AccountPreferencesActivity.ACCOUNT_SETUP"
            android:targetPackage="org.atalk"
            android:targetClass="org.atalk.android.gui.account.AccountPreferencesActivity" />
    </PreferenceScreen>

</PreferenceScreen>